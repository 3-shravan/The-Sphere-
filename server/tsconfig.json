{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",

    "rootDir": "./src",
    "outDir": "./dist",

    "allowJs": true,
    "checkJs": false,

    "strict": true,

    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
