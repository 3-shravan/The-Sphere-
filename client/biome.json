{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "experimentalScannerIgnores": ["node_modules/", "dist/", "build/", "src/global.css"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "indentWidth": 2
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useAltText": "warn",
        "useAriaPropsForRole": "warn",
        "noAriaUnsupportedElements": "warn"
      },
      "correctness": {
        "noChildrenProp": "error",
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "warn",
        "useJsxKeyInIterable": "error",
        "noUnusedImports": "warn"
      },
      "suspicious": {
        "noConsole": "info",
        "noCommentText": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "fix": "safe",
          "options": {}
        }
      },
      "style": {
        "useConst": "off",
        "useTemplate": "warn"
      },

      "complexity": {
        "noExtraBooleanCast": "warn"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
